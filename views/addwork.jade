doctype html
html
    head
        meta(charset='utf-8')
        title
        script(type='text/javascript' src="https://code.jquery.com/jquery-3.2.1.min.js")
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")

    body
        div(class = "container")
            div(class = 'row')
                div(class = 'col-md-4')
                    h2 WORKLOUD
                div(class = 'col-md-4 col-md-offset-4' align = 'right')
                    h3=displayname + ' ë‹˜'
                    a(href = '/logout') logout
                legend
                
                div(class = "col-md-3")
                        form(action = "/uploadwork" method="post" enctype="multipart/form-data")
                
                            p  
                                label(for = 'title') TITLE
                                input(type='text' name = 'title')
                            p
                                label(for = 'writer') WRITER
                                input(type='text' name = 'writer' value=displayname )

                            p 
                                textarea(cols = '100' rows = '15' name = 'content')
                            p
                                label(for = 'FILE') FILE
                                input(type='file' name = 'fileflag' class='btn btn-default')
                            p
                                input(type='submit' value='add'
                                class='btn btn-default')

