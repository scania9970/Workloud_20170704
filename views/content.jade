doctype html
html
    head
        title
        meta(charset='utf-8')
        script(type='text/javascript' src="https://code.jquery.com/jquery-3.2.1.min.js")
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")

      
    body
        div(class='container')
            div(class = 'row')
                div(class = 'col-md-4')
                    h2 WORKLOUD
                div(class = 'col-md-4 col-md-offset-4' align = 'right')
                    h3=displayname + ' 님'
                    a(href = '/logout') logout
                legend
            div(class = 'row')
                div(class = 'col-md-4')
                    h1 &nbsp Content
            div(align='right')
                a(href='/edit/'+contents.lno) edit &nbsp
                a(href='/list') list
            table(class = 'table table-bordered')
                div(align = 'center')
                    
                div
                    tr
                        td=contents.lno   
                        td=contents.title
                        td 작성자
                        td=contents.writer
                        td 작성일
                        td=contents.date
                    tr(height = '300')
                        td(colspan='6')= contents.content
                    tr    
                        td 첨부파일
                        td(colspan = '5') 
                            a(href ='/user/'+contents.path) File View
                

